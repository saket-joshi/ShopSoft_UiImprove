<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:descendantFocusability="beforeDescendants" >

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/card_selector" >
        
        <ImageView android:id="@+id/imgShop"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/desc_shop_icon"
            android:layout_alignParentLeft="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />
        
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/imgShop"
            android:padding="6dp" >
            
            <TextView
                android:id="@+id/txtShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_shop_name"
                android:textSize="@dimen/text_size_shop_name"
                android:textColor="@android:color/black" />
            
            <TextView
                android:id="@+id/txtShopDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_shop_description"
                android:textSize="@dimen/text_size_shop_description"
                android:textColor="@color/card_subtitle"
                android:paddingBottom="6dp" />
            
        </LinearLayout>
        
        <ImageButton android:id="@+id/imgBtnOptions"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_options"
            android:scaleType="centerInside"
            android:scaleX="0.87"
            android:scaleY="0.87"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="@string/desc_shop_icon"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp" />
        
    </RelativeLayout>
    
</FrameLayout>
