<?xml version="1.0" encoding="utf-8"?>

<!-- 
* This is the basic UI for the card layout
* Everything in card layout is dependent on this resource
* The first item defines the card shadow
* The second item defines the main card. 
* You can use this content as a background for any view that you want as a card
* Author: SJo	Created Date: 28-07-14	Version: 1.0
 -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/card_shadow" />
            <corners android:radius="2dp"/>
        </shape>            
    </item>
    
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
            <corners android:radius="2dp"/>
        </shape>
    </item>

</layer-list>
